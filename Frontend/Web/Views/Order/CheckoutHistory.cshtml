
@{
    @model List<OrderViewModel>
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">Checkout History</div>
            <div class="card-body">
                @if(Model.Any())
                {
                      <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Order Id</th>
                            <th>Order Date</th>
                            <th>Order </th>
                         
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.CreatedDateTime.ToShortDateString()</td>
                                    <td>
                                       
                                        @foreach (var orderItem in item.OrderItems)
                                        {
                                            <span class="me-2">@orderItem.ProductName </span>
                                        }
                                          
                                    </td>
                            </tr>
                        }
                    </tbody>
                    </table>
                }
                else
                {
                   <div class="alert alert-info">No Checkout History</div>
                }

            </div>
        </div>
    </div>
</div>

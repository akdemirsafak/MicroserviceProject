@{
    ViewData["Title"] = "Index";
}

@model BasketViewModel

<div class="row">
    <div class="col-md-8">
        <div class="offset-md-2">
            <div class="card">
                <h5 class="card-title">Sepet</h5>
                <div class="card-body">
          
                    @if (Model is not null && Model.BasketItems.Any())
                    {
                        <table class="table-striped table">
                            <thead>
                            <th>Kurs Adı</th>
                            <th>Kurs Fiyat</th>
                            <th>Adet </th>
                            <th>İşlemler</th>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.BasketItems)
                            {
                                <tr>
                                    <td>@item.CourseName</td>
                                    <td>@item.GetCurrentPrice TL @(Model.HasDiscount ? $"(%{Model.DiscountRate.Value} uygulandı)" : "")</td>
                                    <td>@item.Quantity</td>
                                    <td><a asp-controller="Basket" asp-action="RemoveBasketItem" asp-route-basketItemId="@item.CourseId">Sil</a></td>
                                </tr> 
                            }
                                @if (Model.HasDiscount)
                                {
                                    <tr>
                                        <td>İndirim oranı</td>
                                        <th colspan="2"> % @Model.DiscountRate.Value</th>
                                    </tr>
                                }

                                <tr>
                                    <td>@(Model.HasDiscount ? "İndirimli fiyat" : "Toplam fiyat")</td>
                                    <th colspan="2">@Model.TotalPrice TL</th>
                                </tr>  
                        </tbody>
                    </table> 
                    }
                    else{
                        <div class="alert alert-info">Sepet boş.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


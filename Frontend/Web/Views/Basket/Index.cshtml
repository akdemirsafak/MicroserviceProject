@{
    ViewData["Title"] = "Index";
}

@model BasketViewModel

<div class="row">
    <div class="col-md-8">
        <div class="offset-md-2">
            <div class="card">
                <h5 class="card-title">Sepet</h5>
                <div class="card-body">
          
                    @if (Model is not null && Model.BasketItems.Any())
                    {
                        <table class="table-striped table">
                            <thead>
                            <th>Kurs Adı</th>
                            <th>Kurs Fiyat</th>
                            <th>Adet </th>
                            <th>İşlemler</th>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.BasketItems)
                            {
                                <tr>
                                    <td>@item.CourseName</td>
                                    <td>@item.GetCurrentPrice TL @(Model.HasDiscount ? $"(%{Model.DiscountRate.Value} uygulandı)" : "")</td>
                                    <td>@item.Quantity</td>
                                    <td><a asp-controller="Basket" asp-action="RemoveBasketItem" asp-route-basketItemId="@item.CourseId">Sil</a></td>
                                </tr> 
                            }
                                @if (Model.HasDiscount)
                                {
                                    <tr>
                                        <td>İndirim oranı</td>
                                        <th colspan="2"> % @Model.DiscountRate.Value</th>
                                    </tr>
                                }

                                <tr>
                                    <td>@(Model.HasDiscount ? "İndirimli fiyat" : "Toplam fiyat")</td>
                                    <th colspan="2">@Model.TotalPrice TL</th>
                                </tr>  
                        </tbody>
                    </table> 
                    <form asp-controller="Basket" asp-action="ApplyDiscount">
                        @if (Model.HasDiscount)
                        {
                            <div class="alert alert-success">"@Model.DiscountCode" indirim kodu uygulandı.
                                    <a asp-controller="Basket" asp-action="CancelApplyDiscount" class="ps-2">(İndirimi iptal et.)</a>
                                </div>
                                
                        }
                        @if(TempData["discountStatus"] is not null && (bool)TempData["discountStatus"] is false){
                            <div class="alert alert-danger">Geçersiz indirim kodu.</div>
                        }
                        <div class="input-group mb-3">
                            <input type="text" name="DiscountApplyInput.Code" asp-for="DiscountCode" class="form-control">
                            <span class="text-danger" asp-validation-summary="All"></span>
                            <button class="btn btn-outline-secondary" type="submit">Uygula</button>
                        </div>
                        @if (TempData["discountErr"] is not null)
                        {
                            <div class="text-danger"> @TempData["discountErr"]</div>
                        }             
                    </form>
                    <a class="btn btn-success" asp-controller="Order" asp-action="Checkout">Ödeme bilgileri</a>
                    <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Kursları incelemeye devam et.</a>
                    }
                    else{
                        <div class="alert alert-info">Sepet boş.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

